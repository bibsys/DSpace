<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                  http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                  http://www.springframework.org/schema/context
                  http://www.springframework.org/schema/context/spring-context-2.5.xsd
                  http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"
       xmlns:util="http://www.springframework.org/schema/util">

    <context:annotation-config /> <!-- allows us to use spring annotations in beans -->

    <!-- NOTE: IN THE FUTURE THIS FILE SHOULD BE DIVIDED IN MULTIPLE ONES FOR BETTER READABILITY -->

    <!-- UCLouvain Authority -->
    <bean id="uclouvainAuthorAuthority" class="org.dspace.uclouvain.authority.UCLouvainAuthorAuthority" />
    <bean id="uclouvainPromoterAuthority" class="org.dspace.uclouvain.authority.UCLouvainPromoterAuthority" />

    <bean id="uclouvainAuthorityAPIConfiguration" class="org.dspace.uclouvain.authority.configuration.UCLouvainAuthorityAPIConfiguration">
        <property name="filters">
            <util:map key-type="java.lang.String" value-type="java.lang.String">
                <entry key="authors" value="${uclouvain.main_author_query.filter}" />
                <entry key="promoters" value="${uclouvain.main_promoter_query.filter}" />
            </util:map>
        </property>
    </bean>

    <bean id="uclouvainAuthorityClient" class="org.dspace.uclouvain.external.dilbert.client.DilbertClient" >
        <!-- Custom HttpClient -->
        <property name="httpClient">
            <bean class="org.dspace.uclouvain.core.GenericHttpClient">
                <property name="baseUrl" value="${uclouvain.main_author_query.url}"/>
            </bean>
        </property>
    </bean>

    <bean id="uclouvainAuthorAuthorityServiceFactory" class="org.dspace.uclouvain.authority.factory.UCLouvainServiceFactoryImpl"/>

    <!-- OSIS -->
    <bean id="osisConfiguration" class="org.dspace.uclouvain.external.osis.configuration.OSISConfiguration">
        <property name="responseDataKey" value="return"/>
    </bean>
    <bean id="osisClient" class="org.dspace.uclouvain.external.osis.client.OSISClientImpl" >
        <!-- Custom HttpClient -->
        <property name="httpClient">
            <bean class="org.dspace.uclouvain.core.GenericHttpClient">
                <property name="baseUrl" value="${uclouvain.osis.base_url}"/>
                <property name="token" value="${uclouvain.osis.secret}"/>
            </bean>
        </property>
    </bean>

    <!-- PDF ATTESTATION GENERATORS -->
    <!-- ConfigLoader -->
    <bean id="pdfAttestationGeneratorConfiguration" class="org.dspace.uclouvain.pdfAttestationGenerator.configuration.PDFAttestationGeneratorConfiguration">
        <constructor-arg value="/config/pdf/attestation/attestationGeneratorConfiguration.xml"/>
    </bean>
    
    <!-- Factory -->
    <bean id="pdfAttestationGeneratorFactory" class="org.dspace.uclouvain.pdfAttestationGenerator.factory.PDFAttestationGeneratorFactoryImpl" />
    
    <!-- Handlers -->
    <bean id="masterThesisPdfAttestationGeneratorHandle" class="org.dspace.uclouvain.pdfAttestationGenerator.handlers.MasterThesisPdfAttestationGeneratorHandler"/>

    <!-- UTILS -->
    <bean id="metadataUtils" class="org.dspace.uclouvain.core.utils.MetadataUtils" />

    <!-- Submission steps configuration -->
    <bean id="metadataGeneratorFactory" class="org.dspace.uclouvain.submissionMetadataGenerators.factory.MetadataGeneratorFactoryImpl"/>

    <bean id="generateMetadataService" class="org.dspace.uclouvain.submissionMetadataGenerators.GenerateMetadataServiceImpl"/>

    <bean id="degreeMetadataGenerator" class="org.dspace.uclouvain.submissionMetadataGenerators.generators.DegreeMetadataGenerator">
        <property name="degreeCodeField" >
            <bean class="org.dspace.uclouvain.core.model.MetadataField">
                <constructor-arg value="masterthesis.degree.code"/>
            </bean>
        </property>
        <property name="degreeLabelField">
            <bean class="org.dspace.uclouvain.core.model.MetadataField">
                <constructor-arg value="masterthesis.degree.label"/>
            </bean>
        </property>
        <property name="rootDegreeCodeField">
            <bean class="org.dspace.uclouvain.core.model.MetadataField">
                <constructor-arg value="masterthesis.rootdegree.code"/>
            </bean>
        </property>
        <property name="rootDegreeLabelField">
            <bean class="org.dspace.uclouvain.core.model.MetadataField">
                <constructor-arg value="masterthesis.rootdegree.label"/>
            </bean>
        </property>
        <property name="facultyCodeField">
            <bean class="org.dspace.uclouvain.core.model.MetadataField">
                <constructor-arg value="masterthesis.faculty.code"/>
            </bean>
        </property>
        <property name="facultyNameField">
            <bean class="org.dspace.uclouvain.core.model.MetadataField">
                <constructor-arg value="masterthesis.faculty.name"/>
            </bean>
        </property>
    </bean>

    <bean id="accessTypeMetadataGenerator" class="org.dspace.uclouvain.submissionMetadataGenerators.generators.AccessTypeMetadataGenerator">
        <!-- List of accessTypes that are handled by the generator -->
        <property name="accessTypes">
            <util:list>
                <value>openaccess</value>
                <value>UCLouvain networks restriction</value>
                <value>embargo</value>
                <value>administrator</value>
            </util:list>
        </property>
        <!-- The field in which the new metadata will go in -->
        <property name="accessTypeField">
            <bean class="org.dspace.uclouvain.core.model.MetadataField">
                <constructor-arg value="dcterms.accessRights"/>
            </bean>
        </property>
    </bean>

    <bean id="generateMetadataConfiguration" class="org.dspace.uclouvain.submissionMetadataGenerators.configuration.GenerateMetadataConfigurationService">
        <property name="metadataGenerators">
            <!-- Lists the metadata operation, order matters -->
            <util:list>
                <ref bean="degreeMetadataGenerator"/>
                <ref bean="accessTypeMetadataGenerator"/>
            </util:list>
        </property>
    </bean>

    <bean id="degreeMappersService" class="org.dspace.uclouvain.submissionMetadataGenerators.generators.DegreeMappersService">
        <constructor-arg value="/config/mapping/json/degree-mappers.json"/>
    </bean>
</beans>