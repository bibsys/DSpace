<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                  http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                  http://www.springframework.org/schema/context
                  http://www.springframework.org/schema/context/spring-context-2.5.xsd
                  http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"
       xmlns:util="http://www.springframework.org/schema/util">
    
    <context:annotation-config /> <!-- allows us to use spring annotations in beans -->

    <!-- UCLOUVAIN AUTHORITY FEATURE -->

    <!-- Those authority classes are referenced in /dspace/config/modules/authority.cfg -->
    <!-- Handles author authority lookups -->
    <bean id="uclouvainAuthorAuthority" class="org.dspace.uclouvain.authority.UCLouvainAuthorAuthority" />
    <!-- Handles promoter authority lookups -->
    <bean id="uclouvainPromoterAuthority" class="org.dspace.uclouvain.authority.UCLouvainPromoterAuthority" />

    <bean id="uclouvainAuthorityAPIConfiguration" class="org.dspace.uclouvain.authority.configuration.UCLouvainAuthorityAPIConfiguration">
        <property name="filters">
            <util:map key-type="java.lang.String" value-type="java.lang.String">
                <entry key="authors" value="${uclouvain.main_author_query.filter}" />
                <entry key="promoters" value="${uclouvain.main_promoter_query.filter}" />
           </util:map>
       </property>
    </bean>

    <bean id="uclouvainAuthorityServiceFactory" class="org.dspace.uclouvain.authority.factory.UCLouvainAuthorityServiceFactoryImpl"/>

    <bean id="uclouvainAuthorityClient" class="org.dspace.uclouvain.external.dilbert.client.DilbertClient" >
        <!-- Custom HttpClient -->
        <property name="httpClient">
          <bean class="org.dspace.uclouvain.core.GenericHttpClient">
                <property name="baseUrl" value="${uclouvain.main_author_query.url}"/>
            </bean>
        </property>
    </bean>
 
    <!-- OSIS resource beans -->
    <bean id="osisConfiguration" class="org.dspace.uclouvain.external.osis.configuration.OSISConfiguration">
        <!-- The key to extract json from -->
        <property name="responseDataKey" value="return"/>
    </bean>
    <bean id="osisClient" class="org.dspace.uclouvain.external.osis.client.OSISClientImpl" >
        <!-- Custom HttpClient -->
        <property name="httpClient">
            <bean class="org.dspace.uclouvain.core.GenericHttpClient">
                <property name="baseUrl" value="${uclouvain.osis.base_url}"/>
                <property name="token" value="${uclouvain.osis.secret}"/>
            </bean>
        </property>
    </bean>
</beans>